<div class="container">
  <div class="row">
    <p style="color: green"><%= notice %></p>

    <h1 class="text-center">Products</h1>

      <% @products.each do |product| %>
        <div class="col-12 col-md-4" id="products">
          <%= render product %>
          <p>
            <%= link_to "Show this product", product %>
          </p>
        </div>
      <% end %>

    <%= link_to "New product", new_product_path %>
  </div>
</div>
